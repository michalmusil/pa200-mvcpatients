@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="row">
        <div class="row align-items-center">
            <div class="col-auto">
                <img src="https://pa200hw2storageaccount.blob.core.windows.net/mvc-patients-container/cross.png" class="img-fluid" style="max-width: 100px; height: auto;" alt="cross logo">
            </div>
            <div class="col-auto">
                <h1 class="display-4">Welcome to the Patient Portal</h1>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-auto">
            <p>Your patient data is totally safe here as long as you don't look too hard.</p>
        </div>
    </div>

    <hr class="my-4">

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-calendar-event mr-2"></i> Patients data</h5>
                    <p class="card-text">View and manage your current patient's staying at your hospital.</p>
                    <a asp-controller="Patients" asp-action="Index" class="btn btn-primary btn-sm">View patients</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-file-medical mr-2"></i> Medical Records</h5>
                    <p class="card-text">Access your medical history, including lab results, diagnoses, and
                        medications.</p>
                    <a href="#" class="btn btn-info btn-sm">View Records</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-envelope mr-2"></i> Messages</h5>
                    <p class="card-text">Communicate securely with your healthcare providers through our messaging
                        system.</p>
                    <a href="#" class="btn btn-success btn-sm">View Messages</a>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-4">

    <p>
        Have questions or need assistance? Visit our <a href="#">Help Center</a> or contact us at <a
            href="mailto:support@hospitalapp.com">support@hospitalapp.com</a>.
    </p>
</div>
